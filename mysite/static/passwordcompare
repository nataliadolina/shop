$(document).ready(function() {
   $('#id_repeat_password').on('keyup', function(){
      var Value = $('#id_repeat_password').val();
      var Value1 = $('#id_password').val();
      if (Value != Value1)
      {
        $("#text").animate({opacity: "1"}, "fast");
      }
      else
      {
        $("#text").animate({opacity: "0"}, "fast");
      }
   });
});